<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>first_servlet</display-name>
  <welcome-file-list>
    <welcome-file>mohit.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>FirstServlet</display-name>
    <servlet-name>FirstServlet</servlet-name>
    <servlet-class>com.app.FirstServlet</servlet-class>
    <init-param>
    <param-name>query1</param-name>
    <param-value>Mohit Jindal</param-value>
    </init-param>
    
    <init-param>
    <param-name>query2</param-name>
    <param-value>How are you!!!!</param-value>
    </init-param>
    
  </servlet>
  <servlet-mapping>
    <servlet-name>FirstServlet</servlet-name>
    <url-pattern>/servlet1</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>SecondServlet</display-name>
    <servlet-name>SecondServlet</servlet-name>
    <servlet-class>com.app.SecondServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SecondServlet</servlet-name>
    <url-pattern>/servlet2</url-pattern>
  </servlet-mapping>
  
  <context-param>
   <param-name>query0</param-name>
    <param-value>Welcome</param-value>
  </context-param>
  
</web-app>